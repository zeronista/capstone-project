# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# File này dùng cho môi trường development local
# Copy file này thành application-local.properties và điền API keys thực

# Kích hoạt profile này bằng cách:
# 1. Set environment variable: SPRING_PROFILES_ACTIVE=local
# 2. Hoặc trong IDE: Run Configuration > VM Options > -Dspring.profiles.active=local
# 3. Hoặc trong application.properties: spring.profiles.active=local

# ============================================
# STRINGEE CONFIGURATION - ĐIỀN GIÁ TRỊ THỰC
# ============================================
stringee.key.sid=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
stringee.key.secret=your_actual_secret_key_here
stringee.api.base-url=https://api.stringee.com/v1

# Webhook domain cho ngrok (Development)
# Chạy: ngrok http 8080
# Sau đó copy URL ngrok vào đây
stringee.webhook.domain=https://abc123.ngrok.io

# ============================================
# DATABASE CONFIGURATION (Nếu có)
# ============================================
# spring.datasource.url=jdbc:mysql://localhost:3306/capstone_dev
# spring.datasource.username=root
# spring.datasource.password=your_db_password

# ============================================
# LOGGING - Tăng level để debug
# ============================================
logging.level.com.g4.capstoneproject=DEBUG
logging.level.org.springframework.web=DEBUG

# ============================================
# AWS S3 CONFIGURATION - ĐIỀN GIÁ TRỊ THỰC
# ============================================
aws.accessKeyId=YOUR_AWS_ACCESS_KEY_ID
aws.secretAccessKey=YOUR_AWS_SECRET_ACCESS_KEY
aws.s3.region=ap-southeast-1
aws.s3.bucketName=your-bucket-name

# Thời gian Pre-signed URL có hiệu lực (giây)
# Mặc định: 3600 giây = 1 giờ
aws.s3.presignedUrlDuration=3600

# Google OAuth2 Config
spring.security.oauth2.client.registration.google.client-id=YOUR_CLIENT_ID
spring.security.oauth2.client.registration.google.client-secret=YOUR_CLIENT_SECRET
spring.security.oauth2.client.registration.google.scope=profile, email
